{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "lib": ["ES2020"],
        "outDir": "./dist-electron",
        "rootDir": "./electron",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "declaration": false,
        "sourceMap": false
    },
    "include": ["electron/**/*"],
    "exclude": ["node_modules", "dist-electron"]
}
